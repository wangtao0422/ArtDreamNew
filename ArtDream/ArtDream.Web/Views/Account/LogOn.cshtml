@model ArtDream.Web.Models.LogOnModel

@{
    ViewBag.Title = "Log On";
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}

<div class="row">
    <div>
        <div class="login-panel well">
            @using (Html.BeginForm("LogOn", "Account", null, FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div id="LoginStateInfo">
                    @Html.ValidationSummary(true, "Log in was unsuccessful. Please correct the errors and try again.", new { @class = "alert alert-error" })
                </div>
                <div class="control-group">
                    <label class="control-label">用户名：</label>
                    <div class="controls">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "span2" })
                        @Html.ValidationMessageFor(d => d.UserName, "", new { @class = "help-inline valid_error" })
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">密码：</label>
                    <div class="controls">
                        @Html.PasswordFor(m => m.Password, new { @class = "span2" })
                        @Html.ValidationMessageFor(d => d.Password, "", new { @class = "help-inline valid_error" })
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label"></label>
                    <div class="controls">
                        <input type="submit" class="btn btn-primary" value="登录" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
